@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gurme AI | Yan Yana Düzen</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: #fdfaf6;
            font-family: 'Poppins', sans-serif;
            height: 100vh;
            display: flex;
            align-items: center;
        }

        .main-card {
            background: white;
            border-radius: 25px;
            box-shadow: 0px 10px 40px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            width: 100%;
        }

        /* Sol Panel: Form Alanı */
        .input-section {
            padding: 40px;
            background: #ffffff;
            border-right: 1px solid #f0f0f0;
        }

        /* Sağ Panel: Tarif Alanı */
        .output-section {
            padding: 40px;
            background: #faf9ff; /* Hafif morumsu arka plan */
            max-height: 80vh; /* Çok uzun tarifler için iç kaydırma */
            overflow-y: auto;
        }

        h2 {
            color: #4a3f35;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 12px;
            padding: 15px;
            border: 2px solid #eee;
        }

        .btn-primary {
            background: #A084CA;
            border: none;
            font-weight: 600;
            padding: 15px;
            border-radius: 12px;
            transition: 0.3s;
        }

            .btn-primary:hover {
                background: #8466A1;
                transform: scale(1.02);
            }

        .recipe-content {
            white-space: pre-wrap;
            line-height: 1.7;
            color: #444;
            font-size: 0.95rem;
        }

        .recipe-title {
            color: #A084CA;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .placeholder-text {
            color: #ccc;
            text-align: center;
            margin-top: 100px;
        }

        /* Kaydırma çubuğunu güzelleştirelim */
        .output-section::-webkit-scrollbar {
            width: 6px;
        }

        .output-section::-webkit-scrollbar-thumb {
            background: #E8DFF5;
            border-radius: 10px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row main-card g-0">

            <div class="col-md-5 input-section">
                <h2>🍽 Gurme AI</h2>
                <p class="text-muted small">Malzemelerini gir, şef sana saniyeler içinde özel bir tarif hazırlasın.</p>

                <form method="post" class="mt-4">
                    <div class="mb-4">
                        <label class="form-label fw-bold">Malzemelerinizi Yazın</label>
                        <textarea name="ingredients" class="form-control" rows="4"
                                  placeholder="Örn: 2 yumurta, bir avuç un, biraz süt..." required></textarea>
                    </div>
                    <button class="btn btn-primary w-100" type="submit">Tarif Oluştur 👨‍🍳</button>
                </form>

                <div class="mt-5 text-center">
                    <img src="https://cdn-icons-png.flaticon.com/512/1046/1046747.png" width="100" alt="chef" style="opacity: 0.1">
                </div>
            </div>

            <div class="col-md-7 output-section">
                @if (ViewBag.recipe != null)
                {
                    <h4 class="recipe-title">✨ Şefin Özel Tarifi</h4>
                    <div class="recipe-content">@ViewBag.recipe</div>
                }
                else
                {
                    <div class="placeholder-text">
                        <p>Henüz bir tarif oluşturulmadı.<br>Sol taraftan malzemeleri girerek başlayabilirsin!</p>
                    </div>
                }
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>